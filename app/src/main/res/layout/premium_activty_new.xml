<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:padding="16dp"
        android:src="@drawable/ic_cross"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:src="@drawable/ic_premiu_badge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/urbanist_bold"
        android:maxLines="1"
        android:text="@string/start_like_a_pro"
        android:textColor="@color/text_color_dark"
        android:textSize="26sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:maxLines="1"

        android:text="@string/unlock_all_features"
        android:textColor="@color/grey_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24sp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/urbanist_semi_bold"
            android:text="@string/features"
            android:textColor="@color/text_color_primary"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="@font/urbanist_semi_bold"
            android:gravity="center"
            android:text="@string/premium"
            android:textColor="@color/accent_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="@font/urbanist_semi_bold"
            android:gravity="center"
            android:text="@string/free"
            android:textColor="@color/grey_color"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24sp"
        android:layout_marginTop="16dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:fontFamily="@font/urbanist_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/premium_ringtones"
            android:textColor="@color/text_color_primary"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_notifications"
            app:drawableTint="@color/accent_color" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_check_item_iap" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_check_grey_iap" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24sp"
        android:layout_marginTop="16dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:fontFamily="@font/urbanist_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/exclusive_wallpaper"
            android:textColor="@color/text_color_primary"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_wallpaper"
            app:drawableTint="@color/accent_color" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_check_item_iap" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_check_grey_iap" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24sp"
        android:layout_marginTop="16dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:fontFamily="@font/urbanist_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/high_quality_sounds"
            android:textColor="@color/text_color_primary"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_volume"
            app:drawableTint="@color/accent_color" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_check_item_iap" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_cross_item_iap" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24sp"
        android:layout_marginTop="16dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:fontFamily="@font/urbanist_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/remove_ads"
            android:textColor="@color/text_color_primary"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_no_ad"
            app:drawableTint="@color/accent_color" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_check_item_iap" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_cross_item_iap" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_weekly"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_sku_selected"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="32dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/urbanist_bold"
                android:text="@string/weekly_subscription"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_weekly_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urbanist_semi_bold"
                android:gravity="center"
                android:padding="4dp"
                android:text="RS 520.00 /-"
                android:textColor="@color/price_color"
                android:textSize="16sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_most_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="48dp"
            android:background="@drawable/bg_round_stroke_accent_extra_less_white"
            android:elevation="5dp"
            android:fontFamily="@font/urbanist_medium"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:text="@string/most_popular"
            android:textColor="@color/accent_color"
            android:textSize="11sp"
            android:translationY="-4dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ll_weekly" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/ll_monthly"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_sku_non_selected"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/urbanist_bold"
            android:text="@string/monthly_subscription"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_monthly_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_semi_bold"
            android:gravity="center"
            android:padding="4dp"
            android:text="RS 19.99$.00 /-"
            android:textColor="@color/price_color"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFreeTry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_regular"
            android:gravity="center"
            android:text="@string/free_trial_disclaimer"
            android:textColor="@color/text_color_primary"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_upgrade_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_extra_less_round_accent"
        android:fontFamily="@font/urbanist_semi_bold"
        android:gravity="center"
        android:padding="16dp"
        android:letterSpacing="0.015"
        android:text="@string/_3_days_free_trial"
        android:textColor="@color/white"
        android:textSize="16sp" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/urbanist_regular"
        android:gravity="center"
        android:id="@+id/tv_privacy"
        android:layout_marginTop="16dp"
        android:text="@string/cancel_anytime_at_least_24_hours_before_renewal_without_trial"
        android:textColor="@color/text_color_primary" />

</LinearLayout>