<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textApperenceBody3RegularWithoutFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/albert_sans_medium</item>
    </style>


    <style name="textview_large">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:fontFamily">@font/urbanist_semi_bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="textview_medium">
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:fontFamily">@font/urbanist_medium</item>
    </style>

    <style name="textview_regular">
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:fontFamily">@font/urbanist_medium</item>
    </style>



    <style name="TopRightCutCard" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeTopRight">40dp</item>
    </style>


    <style name="PlanCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>


    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>


</resources>